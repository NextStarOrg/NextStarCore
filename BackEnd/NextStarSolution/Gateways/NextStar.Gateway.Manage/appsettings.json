{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "SerilogSetting": {
    "ServerName": "GatewayManage",
    "ErrorConfig": {
      "Path": "../Logs",
      "FileSizeLimitBytes": 5242880,
      "RetainedFileCountLimit": 300
    },
    "NormalConfig": {
      "path": "../Logs",
      "FileSizeLimitBytes": 5242880,
      "RetainedFileCountLimit": 200
    },
    "BusinessConfig": {
      "path": "../Logs",
      "FileSizeLimitBytes": 5242880,
      "RetainedFileCountLimit": 200
    }
  },
  "AllowedOrigins": [
    "http://localhost:14000",
    "http://localhost:14002"
  ],
  "Authority": "http://localhost:13000",
  "DataBaseSetting": {
    "Redis": "localhost",
    "NextStar": "Server=127.0.0.1;Database=NextStarCore;User Id=sa;Password=xA123456;"
  },
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 15020
        }
      ],
      "UpstreamPathTemplate": "/api/manage/blog/{everything}",
      "UpstreamHttpMethod": [
        "Put",
        "Delete",
        "Get",
        "Post"
      ],
      "UpstreamHeaderTransform": {
        "X-Forwarded-For": "{RemoteIpAddress}"
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "nextstar",
        "AllowedScopes": []
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:15000"
  }
}
