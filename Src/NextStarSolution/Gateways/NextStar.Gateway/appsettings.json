{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "SerilogSetting": {
    "ServerName": "IdentityService",
    "ErrorConfig": {
      "Path": "../Logs",
      "FileSizeLimitBytes": 5242880,
      "RetainedFileCountLimit": 300
    },
    "NormalConfig": {
      "path": "../Logs",
      "FileSizeLimitBytes": 5242880,
      "RetainedFileCountLimit": 200
    },
    "BusinessConfig": {
      "path": "../Logs",
      "FileSizeLimitBytes": 5242880,
      "RetainedFileCountLimit": 200
    }
  },
  "AllowedOrigins": [
    "http://localhost:12001",
    "http://localhost:12002"
  ],
  "Authority": "http://localhost:13000",
  "DataBaseSetting": {
    "Account": "Server=127.0.0.1;Database=NextStarAccount;User Id=sa;Password=xA123456;",
    "Redis": "localhost"
  },
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 13020
        }
      ],
      "UpstreamPathTemplate": "/api/manage/core/{everything}",
      "UpstreamHttpMethod": [ "Put", "Delete", "Get", "Post" ],
      "UpstreamHeaderTransform": {
        "X-Forwarded-For": "{RemoteIpAddress}"
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "nextstar",
        "AllowedScopes": [ "nextstarapi" ]
      }
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 13021
        }
      ],
      "UpstreamPathTemplate": "/api/manage/blog/{everything}",
      "UpstreamHttpMethod": [ "Put", "Delete", "Get", "Post" ],
      "UpstreamHeaderTransform": {
        "X-Forwarded-For": "{RemoteIpAddress}"
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "nextstar",
        "AllowedScopes": [ "nextstarapi" ]
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:13010"
  }
}
